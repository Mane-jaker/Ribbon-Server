<Window x:Class="Ribbon_server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ribbon_server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Button x:Name="Salir" Content="Salir" Height="57" Width="206" Margin="0,40,0,20"/>
            <Button x:Name="Opciones" Content="Opciones"  Height="57" Width="206" Margin="0,20,0,20" Click="Opciones_Click"/>
            <Button x:Name="Conectar" Content="Conectar" Height="57" Width="206" Margin="0,20,0,20" Click="Conectar_Click"/>
            <Button Name="logun" Margin="0,20,0,20" Height="57" Width="206" Click="Login_Click">
                Login
            </Button>
        </StackPanel>
    </Grid>
</Window>
