        xmlns:local="clr-namespace:Ribbon_server"
        mc:Ignorable="d"
        Title="Principal" Height="450" Width="800">
        <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
