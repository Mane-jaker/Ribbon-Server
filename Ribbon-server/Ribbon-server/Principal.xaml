            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <Button Name="agregar" Width="45" FontSize="36" Height="70" FontFamily="Stencil" Background="White" Margin="40,0,0,0" HorizontalAlignment="Left" Click="OnClick1" ClickMode="Press">
                +
            </Button>
            <Button Name="xd" Width="45" FontSize="12" Height="70" FontFamily="Baskerville Old Face" Background="White" Margin="15,0,0,0" HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock>
                        Inicia
                    </TextBlock>
                    <TextBlock>
                        sesion.
                    </TextBlock>
                </StackPanel>           
            </Button>
        </StackPanel>
        </Grid> 
</Window>
