<Window x:Class="Ribbon_server.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ribbon_server"
        mc:Ignorable="d"
        Title="Principal" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}">
        <Button x:Name="agregar" Content="+" HorizontalAlignment="Left" Margin="70,160,0,0" VerticalAlignment="Top" Width="50" FontSize="38" Height="70">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF857A7A" Offset="0.268"/>
                    <GradientStop Color="#FFEF3131" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        

    </Grid>
</Window>
